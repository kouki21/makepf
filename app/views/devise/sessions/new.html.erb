<div class = "bg-i">
  <div class = "col-md-4 offset-md-3">
    <h2 style = "padding-top: 50px;">ログイン</h2>
    <%= form_with model: @user, url: user_session_path, local: true do |f| %>
      <div class="field">
        <%= f.label :メールアドレス %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", size: "40x5" %>
      </div>

      <div class="field" style = "padding-top: 30px;">
        <%= f.label :パスワード %><br />
        <%= f.password_field :password, autocomplete: "current-password", size: "40x5" %>
      </div>

      <div class="actions" style = "padding-top: 30px;">
        <%= f.submit "ログイン",  class: "button" %>
      </div>

      <div style = "padding-top: 30px;">
        まだアカウントをお持ちでない方は
        <%= link_to "こちら",new_user_registration_path %>
      </div>
    <% end %>
  </div>
</div>

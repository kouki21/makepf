<main>
  <div class = "container">
    <div class = "row">
      <div class = "col-md-4 offset-md-3">
        <h2 style = "border-color: #ff0000; padding-top: 30px;">ユーザー編集</h2>
        <%= form_with model:@user, local:true do |f| %>
          <div class = "form-group">
            <label for="inputName">名前</label><br>
            <%= f.text_field :name,size: "60x5", autofocus: true, id:"inputName" %>
          </div>

          <div class = "form-group">
            <label for="inputImage">アイコン</label><br>
            <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
          </div>

          <div class = "form-group">
            <label for="inputIntroduction">自己紹介</label><br>
            <%= f.text_area :introduction,size: "60x5", autofocus: true, id:"inputIntroduction" %>
          </div>

          <div class = "form-group">
            <%= f.submit "更新",class: "btn btn-secondary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</main>

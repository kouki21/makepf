<main>
  <div class = "container">
    <div class = "row">
      <div class = "col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <% if @objective.errors.any? %>
          <%= @objective.errors.count %>errors prohibited this book from being saved
          <% @objective.errors.full_messages.each do |message| %>
            <%= message %>
          <% end %>
        <% end %>
        <h2>投稿編集</h2>
        <%= form_with model:@objective, local:true do |f| %>
          <div class = "form-group">題名</br>
            <%= f.text_field:title %>
          </div>
          <div class = "form-group">投稿内容 </br>
            <%= f.text_area:introduction %>
          </div>
          <div class = "form-group">
            <%= f.attachment_field :image, placeholder: "プロフィール画像" %>
          </div>
          <div class = "form-group">金額</br>
            <%= f.text_field:money %>
          </div>
          <div class = "form-group">
            <%= f.submit'Update Objective',class: "btn btn-success" %>
          </div>
        <% end %>
        <%= link_to "Show",objective_path %> |
        <%= link_to "Back",objectives_path %>
      </div>
    </div>
  </div>
</main>